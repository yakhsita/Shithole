def staircase():
    location = "Staircase"
    direction = ""

    print()
    time.sleep(0.7)
    print("You are in the", location)
    print()
    time.sleep(0.7)
    print()
    possible_moves = rooms[location].keys()
    print("Possible moves:", *possible_moves)

    direction = input("Move which direction? \n>> ").lower().strip()
    print("You entered:", direction)

    if direction == "up":
        time.sleep(0.6)
        take_crowbar()
    elif direction == "down":
        print()
        print()
        waiting_area()
    elif direction == "back":
        print()
        print()
        cafeteria()
    elif direction == "map":
        map() +staircase()
    elif direction == "quit":
        print(" ")
        time.sleep(0.6)
        sys.exit("GAME TERMINATING...\n")
    else:
        print()
        print("Invalid move! \nOnly Enter Valid Statements. ")
        staircase()


def take_crowbar():
    while 'crowbar' not in inventory:
        print()
        print()
        print()
        raw = input("On the way up the stairs, something catches your eye. ").lower()
        enter(raw)
        raw = input("It's a Crowbar! ").lower()
        enter(raw)
        raw = input("Should you take it? ").lower()
        enter(raw)
        raw = input("But what could you possibly use it for? ").lower()
        enter(raw)
        print()
        print()
        print("Pick it up? ")
        take_the_crowbar = input("Yes/No: \n>> ").lower().strip()

        if take_the_crowbar == "yes":
            add_to_inventory("crowbar ")
            time.sleep(0.5)
            print("CROWBAR added to inventory ")
            time.sleep(0.5)
            print("Inventory: ")
            print(inventory)
            print()
            terrace()
        elif take_the_crowbar == "no":
            print("You leave the Crowbar in the Terrace. ")
            raw = input("... ").lower()
            enter(raw)
            print()
            terrace()
        elif take_the_crowbar == "map":
            map() + take_crowbar()
        elif take_the_crowbar == "quit":
            print(" ")
            time.sleep(0.6)
            sys.exit("GAME TERMINATING...\n")
        else:
            print()
            print("Invalid move! \nOnly Enter Valid Statements. ")
            take_crowbar()
    terrace()


def terrace():
    location = "Terrace"
    direction = ""

    print()
    print()
    time.sleep(0.6)
    print("* ,   . +   `. *` . . +,   *  ` . + ,  . `  . ")
    print("  .  *  ` . + ,  . `  .   . +   `. *` . . + ` ")
    print("You are in the", location)
    time.sleep(0.6)
    raw = input("The stars look pretty tonight. ").lower()
    enter(raw)
    raw = input("You wonder what exactly you're doing here. ").lower()
    enter(raw)
    raw = input("You're not sure what exactly you want to do either. ").lower()
    enter(raw)
    raw = input("Would you like to go back downstairs or... ").lower()
    enter(raw)
    print()

    print()
    possible_moves = rooms[location].keys()
    print("Possible moves:", *possible_moves)

    direction = input("Decision? \n>> ").lower().strip()
    print("You entered:", direction)

    if direction == "back":
        print()
        time.sleep(0.6)
        raw = input("As tempting as a trip to the stars sounds like, you decide to keep fighting. ").lower()
        enter(raw)
        raw = input("You could come back here anytime, anyway. ").lower()
        enter(raw)
        print()
        print()
        staircase()
    elif direction == "jump":
        print()
        time.sleep(0.6)
        print("Do you really wish to jump? Nothing special would happen. You’ll just die. ")
        raw = input("As always wake up in the white room. ").lower()
        enter(raw)
        raw = input("Maybe it's different this time... ").lower()
        enter(raw)
        raw = input("You brace yourself and fall forward. ").lower()
        enter(raw)
        print()
        time.sleep(0.6)
        raw = input("... Only to wake up in the White Room. ").lower()
        enter(raw)
        print()
        print("God dammit. ")
        raw = input("Same thing, again and again. ").lower()
        enter(raw)
        white_room()
    elif direction == "map":
        map() + terrace()
    elif direction == "quit":
        print(" ")
        time.sleep(0.6)
        sys.exit("GAME TERMINATING...\n")
    else:
        print()
        print("Invalid move! \nOnly Enter Valid Statements. ")
        print()
        terrace()


def waiting_area():
    location = "Waiting_Area"
    direction = ""

    while direction != "exit":

        print()
        time.sleep(0.7)
        print("You are in the", location)
        print()
        time.sleep(0.7)
        raw = input("The deeper levels always felt strange to you. ").lower()
        enter(raw)
        raw = input("The Waiting Area is nothing much, except for the safe locker. ").lower()
        enter(raw)
        raw = input("To the left is an operating room and to the right... a morgue. ").lower()
        enter(raw)
        raw = input("There’s also a supply closet. ").lower()
        enter(raw)
        print("You may also go back up the staircase. (Type 'up') ")
        print()

        time.sleep(0.7)
        print()
        possible_moves = rooms[location].keys()
        print("possible moves:", *possible_moves)

        direction = input("Move which direction? \n>> ").lower().strip()
        print("You entered:", direction)

        if direction == "left":
            print()
            print()
            operation_room()
        elif direction == "up":
            print()
            print()
            staircase()
        elif direction == "right":
            print()
            print()
            morgue()
        elif direction == "exit":
            print()
            print()
            password()
        elif direction == "inspect":
            if 'bug spray' not in inventory:
                print()
                time.sleep(0.6)
                raw = input("You navigate your way through the chairs. ").lower()
                enter(raw)
                raw = input("You see a door that leads to the cleaning closet. ").lower()
                enter(raw)
                raw = input("In there you find a bottle of bug spray. ").lower()
                enter(raw)
                print()
                take_spray()
            elif 'bug spray' in inventory:
                print()
                time.sleep(0.6)
                print("There is nothing left to inspect. ")
                print()
                print()
                waiting_area()
            elif direction == "map":
                map() + waiting_area()
            elif direction == "quit":
                print(" ")
                time.sleep(0.6)
                sys.exit("GAME TERMINATING...\n")
        elif direction == "map":
            map() + waiting_area()
        elif direction == "quit":
            print(" ")
            time.sleep(0.6)
            sys.exit("GAME TERMINATING...\n")
        else:
            print()
            print("Invalid move! \nOnly Enter Valid Statements. ")
            print()
            print()
            waiting_area()


def take_spray():
    print("Pick it up? ")
    take_the_spray = input("Yes/No: \n>> ").lower().strip()
    if take_the_spray == "yes":
        add_to_inventory("bug spray ")
        print()
        time.sleep(0.5)
        print("Bug spray added to inventory ")
        print()
        time.sleep(0.5)
        print("Inventory: ")
        print(inventory)
        print()
        raw = input("You head back to the waiting_area. ").lower()
        enter(raw)
        print()
        print()
        waiting_area()
    elif take_the_spray == "no":
        print()
        raw = input("You leave the Bug spray in the cabinet. ").lower()
        enter(raw)
        raw = input("You head back to the waiting_area. ").lower()
        enter(raw)
        print()
        print()
        waiting_area()
    elif take_the_spray == "map":
        map() + take_spray()
    elif take_the_spray == "quit":
        print(" ")
        time.sleep(0.6)
        sys.exit("GAME TERMINATING...\n")
    else:
        print()
        print("Invalid move! \nOnly Enter Valid Statements. ")
        print()
        take_spray()


